<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cah_ngganteng.datagudang_uts.Qc">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:text="Quality Control Report"
                android:layout_gravity="center"
                android:id="@+id/TextView01"
                android:padding="10dp"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="QC Report No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:ems="10"
                android:id="@+id/eNoQc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Jenis Inspeksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:ems="10"
                android:id="@+id/eInspeksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Nama Perangkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:ems="10"
                android:id="@+id/ePerangkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Tujuan Inspeksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:ems="10"
                android:id="@+id/eTujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Inspektor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:ems="10"
                android:id="@+id/eInspektor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.38">

                <Button
                    android:text="Simpan"
                    android:id="@+id/save"
                    android:onClick="simpandulu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:text="keluar"
                    android:id="@+id/keluar"
                    android:onClick="exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
